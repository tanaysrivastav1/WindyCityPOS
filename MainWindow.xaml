<Window x:Class="WindyCityPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindyCityPOS"
        mc:Ignorable="d"
        
        Title="WindyCityPOS" 
        
        Height="1080" 
        Width="1920" 
        Background="White" 
        Foreground="Black" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Center"
        
        WindowState="Maximized"
        WindowStyle="None"
        
        >
    <Grid>
        <Border x:Name="sub_cata" BorderThickness="0" Margin="692,113,380,0" Background="#FFEAEAEA"/>
        <Border x:Name="cart" BorderThickness="0" Margin="0,280,1380,110" Background="#FFB8B8B8"/>
        <Border x:Name="payment" BorderThickness="0" Margin="0,970,1380,0" Background="#FF208D2A"/>
        <Border x:Name="qualifiers" BorderThickness="0" Margin="1540,113,0,0" Background="#FFD3DADA"/>
        <Border x:Name="order_info" BorderThickness="0" Margin="0,0,1380,800" Background="#FFEAEAEA"/>
        <Border x:Name="main_cata" BorderThickness="0" Margin="540,0,1228,0" Background="#FF4E7997"/>
        <Border x:Name="navigation" BorderThickness="0" Margin="692,0,0,967" Background="#FFE9F5C7"/>
        <Button Content="Pick-Up Orders" HorizontalAlignment="Left" Margin="556,11,0,0" VerticalAlignment="Top" Height="95" Width="120" Click="Button_Click_1"/>
        <Button Content="Drivers" HorizontalAlignment="Left" Margin="1564,16,0,0" VerticalAlignment="Top" Width="150" Height="85"/>
        <Button Content="Records" HorizontalAlignment="Left" Margin="1746,16,0,0" VerticalAlignment="Top" Width="150" Height="85" Click="Button_Click"/>
        <Button Content="Calculator" HorizontalAlignment="Left" Margin="1319,16,0,0" VerticalAlignment="Top" Width="75" Height="85" Click="Button_Click_2"/>
        <Button Content="Weather" HorizontalAlignment="Left" Margin="1419,16,0,0" VerticalAlignment="Top" Width="75" Height="85" Click="Button_Click_2"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="1177,16,0,0" VerticalAlignment="Top" Width="75" Height="85" Click="Button_Click_2"/>

    </Grid>
</Window>
