<Window x:Class="WindyCityPOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindyCityPOS"
        mc:Ignorable="d"
        
        Title="WindyCityPOS" 
        
        Height="1080" 
        Width="1920" 
        Background="White" 
        Foreground="Black" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Center"
        
        WindowState="Maximized"
        WindowStyle="None"
        
        >
    <Grid>
        <Border x:Name="sub_cata" BorderThickness="0" Margin="692,210,380,0" Background="#FFEAEAEA"/>
        <Border x:Name="cart" BorderThickness="0" Margin="0,210,1380,150" Background="#FFB8B8B8"/>
        <Border x:Name="payment" BorderThickness="0" Margin="0,914,1380,0" Background="#FF208D2A"/>
        <Border x:Name="qualifiers" BorderThickness="0" Margin="1540,210,0,0" Background="#FFD3DADA"/>
        <Border x:Name="order_info" BorderThickness="0" Margin="0,0,1380,854" Background="#FFEAEAEA"/>
        <Border x:Name="main_cata" BorderThickness="0" Margin="540,210,1228,0" Background="#FF4E7997"/>
        <Border x:Name="navigation" BorderThickness="0" Margin="540,0,0,854" Background="#FFE9F5C7"/>

    </Grid>
</Window>
